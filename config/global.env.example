########################
# DJANGO CONFIGURATION #
########################

# Secret Key
DJANGO_SECRET_KEY=ChangeThisToRandomStringInProduction

# Default Admin Credentials
DJANGO_DEFAULT_ADMIN_USERNAME=admin
DJANGO_DEFAULT_ADMIN_PASSWORD=adminpassword

# Localization
DJANGO_LANGUAGE_CODE=de
DJANGO_TIME_ZONE=Europe/Berlin

# Django Debugging (disable in production!)
DJANGO_DEBUG=0

# Logging
DJANGO_LOGLEVEL=DEBUG

# SSL-Encryption
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SESSION_COOKIE_SECURE=0


##########################
# DATABASE CONFIGURATION #
##########################

MYSQL_USER=dbuser
MYSQL_PASSWORD=SetDatabaseUserPassword
MYSQL_RANDOM_ROOT_PASSWORD=1
MYSQL_PORT=3306


########################
# PYTHON CONFIGURATION #
########################

PYTHONUNBUFFERED=1

##########################
# GUNICORN CONFIGURATION #
##########################

GUNICORN_WORKERS=2
GUNICORN_THREADS=2
